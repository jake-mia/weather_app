<%= render 'layouts/modal_1' %>

<div class="col-xs-12" style="position:relative;padding:0px;">

  <!-- background image -->
  <div class="col-xs-12" style="position:absolute;border:solid 0px green;padding:0px;">
    <%=image_tag('clouds-1.jpg', :class => "", :style => "width:100%;min-width:600px;height:100%;opacity:.30;min-height:800px;", :skip_pipeline => true) %>
  </div>

  <!-- card -->
  <div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4" style="margin-top:15%;border:solid 0px;background:rgba(255, 255, 255, .4);border-radius:15px;">

    <!-- spacer -->
    <div class="col-xs-12" style="height:30px;"></div>

    <!-- results here -->
    <div class="col-xs-8" style="font-family:Parisienne;font-size:40px;color:#9dbed7;">
      <%=@result_object[:name]%>
    </div>
    <div class="col-xs-4" style="font-family:Open+Sans;font-size:10px;color:red;padding-top:10px;">
      <%if @result_object[:cached_indicator]%>
        *cached results
      <%end%>
    </div>
    <div class="col-xs-12" style="font-family:Open+Sans;font-size:40px;">
      <%=@result_object[:temp_f]%> F
    </div>
    <div class="col-xs-12" style="font-family:Luckiest+Guy;font-size:20px;">
      <%=@result_object[:condition]%>
    </div>

     <!-- spacer -->
     <div class="col-xs-12" style="height:30px;"></div>

     <!-- forecast -->
     <div class="col-xs-12" style="font-family:Luckiest+Guy;font-size:12px;">
       <%if @result_object[:day1].present? %>
         <span style="color:#9dbed7;">Tommorrow's Forecast:</span><br>
         high: <%=@result_object[:day1_high]%><br>
         <%=@result_object[:day1_text]%><br>
       <%end%>
     </div>

     <!-- spacer -->
     <div class="col-xs-12" style="height:30px;"></div>

     <!-- button -->
     <div class="col-xs-12" style="">
       <%=link_to root_path, :style => "text-decoration:none;font-size:11px;" do %>
         <div class="btn btn-md btn-block" style="background:#9dbed7;color:#ffffff;text-decoration:none;height:40px;padding-top:10px;">
           TRY AGAIN
         </div>
       <%end%>
     </div>

     <!-- spacer -->
     <div class="col-xs-12" style="height:30px;"></div>

     <!-- debug -->
     <%#=@result_object.to_s%>

  </div>

</div>
